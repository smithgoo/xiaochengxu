<template name="postItem">
  <view class='post-content'>
    <view class='post-author-name'>
      <!-- wx:if="{{false}}" 显示隐藏判断 -->
      <image class='post-author' src='{{post_img}}'></image>
      <text class='post-name'>{{date}} {{idx}} {{title}}</text>
    </view>
    <text class='post-title'>{{title}}</text>
    <image class='post-img' src='{{author_img}}'></image>
    <text class='post-textcontent'>{{item.content}}</text>
    <view class='post-like'>
      <image class='post-like-img' src='{{author_img}}'></image>
      <text class='post-like-font'>{{item.view_num}}</text>
      <image class='post-like-img' src='{{author_img}}'></image>
      <text class='post-like-font'>{{item.collect_num}}</text>
    </view>
  </view>
</template>